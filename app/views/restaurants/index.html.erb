<h1>Listing articles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Min Price</th>
    <th>Max Price</th>
    <th>Description</th>
    <th>Category</th>
  </tr>

  <% @restaurant.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.location %></td>
      <td><%= restaurant.min_price %></td>
      <td><%= restaurant.max_price %></td>
      <td><%= restaurant.description %></td>
      <td><%= restaurant.category %></td>
      <td><%= link_to 'Show', restaurant_path(restaurant) %></td>
    </tr>
  <% end %>
</table>
